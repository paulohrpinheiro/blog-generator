<?xml version="1.0"?>

<rss version="2.0">
  <channel>
    <title><%= blog.name %></title>
    <link><%= blog.url %></link>
    <description><%= blog.description %></description>
    <language><%= blog.language %></language>

<% for post in posts -%>
    <item>
      <title><%= post[:title] %></title>
      <link><%= post[:url] %></link>
      <description><%= post[:description] %></description>
      <pubDate><%= post[:date] %></pubDate>
    </item>
<% end -%>

  </channel>
</rss>
